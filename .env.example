# WhatsApp Webhook Lambda Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=development

# Database Configuration
DB_HOST=your-database-host.amazonaws.com
DB_PORT=5432
DB_NAME=whatsapp_db
DB_USER=postgres
DB_PASSWORD=your-database-password

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=0
DB_POOL_IDLE=30000
DB_POOL_ACQUIRE=60000

# WhatsApp Webhook Configuration
WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WEBHOOK_SECRET=your-webhook-secret
ENABLE_SIGNATURE_VERIFICATION=true
MAX_PAYLOAD_SIZE=1048576

# WhatsApp API Configuration
WHATSAPP_API_VERSION=v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Logging Configuration
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=false

# AWS Configuration
AWS_REGION=us-east-1
AWS_LAMBDA_FUNCTION_NAME=whatsapp-webhook-handler
AWS_LAMBDA_FUNCTION_VERSION=$LATEST

# Rate Limiting and Retry Configuration
MAX_REQUESTS_PER_MINUTE=100
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
BACKOFF_MULTIPLIER=2

# Feature Flags
ENABLE_INCOMING_MESSAGE_LOGGING=true
ENABLE_STATUS_UPDATE_LOGGING=true
ENABLE_ERROR_NOTIFICATIONS=false
ENABLE_METRICS=false

# Security Configuration
ENABLE_CORS=true
ALLOWED_ORIGINS=*
ENABLE_REQUEST_VALIDATION=true
